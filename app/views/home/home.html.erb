<img src="http://icloudpicture.com/wp-content/uploads/2016/09/Wow-Legion-Wallpaper.jpg" id="bg" alt="background image" />
<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="col-md-6 col-md-offset-3 center faded-backdrop">
        <p><h1 class="title">Raider iLvl</h1></p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-1 center">
      <% if !current_user %>
      <div class="container">
        <div class="row">
          <div class="col-md-4 col-md-offset-1">
            <%= button_to "Sign up", signup_path, class: "pull-right btn btn-legion", method: :get %>
          </div>
          <div class="col-md-4">
            <%= button_to "Login", login_path, class: "pull-left btn btn-legion", method: :get %>
          </div>
        </div>
      </div>
      <% else %>
      <%= button_to "Get Started", dashboard_path, class: "btn btn-default", method: :get %>
      <% end %>
    </div>
  </div>
</div>
