<img src="http://icloudpicture.com/wp-content/uploads/2016/09/Wow-Legion-Wallpaper.jpg" id="bg" alt="background image" />
<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="col-md-6 col-md-offset-3 center faded-backdrop spacing">
        <p><h1 class="title">Raider iLvl</h1></p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-sm-10 col-md-offset-1 col-sm-offset-1 center spacing">
      <% if !current_user %>
      <div class="container">
        <div class="row">
          <div class="col-md-4 col-sm-4 col-md-offset-1 col-sm-offset-1">
            <%= button_to "Sign up", signup_path, class: "pull-right btn btn-legion btn-lg", method: :get %>
          </div>
          <div class="col-md-4 col-sm-4">
            <%= button_to "Login", login_path, class: "pull-left btn btn-legion btn-lg", method: :get %>
          </div>
        </div>
      </div>
      <% else %>
      <%= button_to "Get Started", dashboard_path, class: "btn btn-legion btn-lg", method: :get %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 spacing faded-backdrop white">
      <p class="center">
        Welcome to Raider iLvl. A site designed for raid leaders to easily be able to track the item level of all raid members.
      </p>
    </div>
  </div>
</div>

<div id="footer">
  <div class="container">
    <div class="row white center">
      <div class="col-md-6">
        <p>
          Some content stuff.
        </p>
      </div>
      <div class="col-md-6">
        <p>
          Some contact/donation stuff.
        </p>
      </div>
    </div>
  </div>
</div>
