<div class="container center">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1>Signup!</h1>

      <%= form_for @user do |f| %>

        <div class="form-group">
          <%= f.text_field :user_name, class: "form-control center", placeholder: :user_name%>
        </div>
        <div class="form-group">
          <%=f.text_field :email, class: "form-control center", placeholder: :email %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: "form-control center", id: "pass1", placeholder: :password %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, class: "form-control center", id: "pass2", placeholder: :password_confirmation %>
        </div>
        <br>
        <%= f.submit "Submit", class: "btn btn-primary", id: "submit" %>

      <% end %>
    </div>
  </div>
</div>
