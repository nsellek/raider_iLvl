<%= button_to "Back", dashboard_path, class: "btn btn-primary", method: :get %>
<div class="container">
  <div class="row">
    <div id="members">
      <%= form_tag save_members_path(@group) do %>
      <div class="col-md-2">
        <%= submit_tag "Add Members", class: "btn btn-success add_members", style: "margin-bottom: 10px;" %>
        <input class="search form-control" id="search_box" placeholder="Search by name"/>
      </div>
      <div class="col-md-8">
          <table class="table">
            <tr>
              <th>Name</th>
              <th>Realm</th>
              <th>Level</th>
              <th>Add?</th>
            </tr>
            <tbody class="list">
            <% @remaining_members.each do |member| %>
              <tr>
                <td class="name"><%= member['name'] %></td>
                <td><%= member["realm"] %></td>
                <td><%= member["level"] %></td>
                <td><%= check_box_tag "members[]", member.id, false, class: "add_member" %></td>
              </tr>
            <% end %>
            </tbody>
          </table>

      </div>
      <% end %>
    </div>
  </div>
</div>
