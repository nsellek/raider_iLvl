<%= button_to "Back", dashboard_path, class: "btn btn-primary", method: :get %>
<div class="container">
  <div class="row">
    <div id="members">
      <div class="col-md-8 col-md-offset-2">
        <%= form_tag save_members_path(@group) do %>
          <%= submit_tag "Add Members", class: "btn btn-success" %>
          <input class="search" placeholder="Search by name"/>
          <table class="table">
            <tr>
              <th>Name</th>
              <th>Realm</th>
              <th>Level</th>
              <th>Add?</th>
            </tr>
            <tbody class="list">
            <% @guild_members.each do |member| %>
              <tr>
                <td class="name"><%= member['name'] %></td>
                <td><%= member["realm"] %></td>
                <td><%= member["level"] %></td>
                <td><%= check_box_tag "members[]", member.id %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>
