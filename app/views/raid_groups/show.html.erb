<%= button_to "Back", dashboard_path, class: "btn btn-primary", method: :get %>
<div class="container">
  <div class="row">
    <div class="col-md-2">
      <%= button_to "Refresh Members", refresh_members_path(@group), class: 'btn btn-success', method: :get %>
    </div>
    <div class="col-md-8">
      <table class="table">
        <tr>
          <th>Name</th>
          <th>Realm</th>
          <th>iLvl</th>
        </tr>
        <% @group.guild_members.each do |member| %>
        <tr>
          <td><%= member['name'] %></td>
          <td><%= member["realm"] %></td>
          <td><%= member["ilvl"] %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
