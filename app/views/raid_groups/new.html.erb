<div class="container center">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1>New Raid Group!</h1>

      <%= form_for @group do |f| %>

        <div class="form-group">
          <%= f.text_field :group_name, class: "form-control center", placeholder: :group_name%>
        </div>
        <br>
        <%= f.submit "Add", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
